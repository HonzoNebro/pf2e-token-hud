<div class="pf2e-token-hud resolve">
    <p>
        <input {{#unless hasSteel}}class="hidden" {{/unless}} type="radio" name="pick" value="breather" checked>
        <span>
            {{#if hasSteel}}
            <strong>{{i18n 'breather.label'}}:</strong>
            {{/if}}
            {{i18n 'breather.msg'}}
        </span>
    </p>
    {{#if hasSteel}}
    <p>
        <input type="radio" name="pick" value="steel">
        <span>
            <strong>{{localize 'PF2E.Actions.SteelYourResolve.Title'}}:</strong>
            {{i18n 'steel.msg'}}
        </span>
    </p>
    {{/if}}
</div>